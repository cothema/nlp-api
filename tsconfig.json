{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "types": [
      "node",
      "jest",
      "reflect-metadata"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "noEmit": false
  },
  "include": [
    "src/**/*",
    "node_modules/@types/node/globals.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
