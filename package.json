{
  "name": "nlp20",
  "version": "0.0.1",
  "description": "Simple NLP tool",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --project=./tsconfig.json --no-notify --respawn --transpileOnly --exit-child --prefer-ts -- src/index.ts",
    "dev:debug": "ts-node-dev --project=./tsconfig.build.json --no-notify --respawn --transpileOnly --exit-child --prefer-ts --inspect-brk=5858 -- src/index.ts",
    "build": "tsc -p ./tsconfig.build.json",
    "build:debug": "tsc --sourceMap -p ./tsconfig.build.json",
    "test": "jest --config=./jest.config.js",
    "test:cov": "jest --config=./jest.config.js --coverage",
    "test:watch": "jest --config=./jest.config.js --watch",
    "lint": "tslint -p . --fix"
  },
  "author": "Miloš Havlíček",
  "license": "MIT",
  "dependencies": {
    "@types/natural": "^2.1.1",
    "@types/pg": "^7.14.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "inversify": "^5.0.1",
    "natural": "^4.0.2",
    "node-nlp": "^4.3.0",
    "pg": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "winston": "^3.2.1",
    "xregexp": "^5.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.4",
    "@types/jest": "^26.0.21",
    "@types/node": "^14.14.35",
    "@types/supertest": "^2.0.8",
    "husky": "^5.2.0",
    "inversify-logger-middleware": "^3.1.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.1.1",
    "prettier": "^2.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^6.1.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-etc": "^1.10.1",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^4.2.3"
  },
  "prettier": {
    "trailingComma": "all"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "tslint -p . --fix",
      "git add",
      "npm t"
    ]
  },
  "husky": {
    "hooks": {}
  },
  "engines": {
    "node": "12.x"
  }
}
